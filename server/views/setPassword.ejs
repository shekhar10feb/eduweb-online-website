<!-- ========================= -->
<!--     Set Password Page     -->
<!-- ========================= -->

<%- include ('partials/headerForLoginAndRegister') %>

<!-- Main Tag -->
<main class="w-full h-full flex justify-center items-center flex-col bg-gray-300">
  <% if(typeof message !=='undefined' ) { %>
  <div class="md:w-6/12 w-8/12 flex justify-between items center flex-row text-gray-600 md:text-base sm:text-sm text-xs bg-white absolute top-20 md:p-2 p-1 md:px-4 px-2 rounded-md shadow-md message_to_user_div">
    <h1 class="w-auto italic font-medium message_to_user">
      <%= message %>
    </h1>
  </div>
  <% } %>
  <div class="lg:w-80 md:w-72 w-64 flex justify-center items-start flex-col absolute top-40 bg-white p-8 rounded-md shadow-md">
    <h2 class="font-semibold md:text-base text-sm text-gray-700">Set your new password here:
    </h2>
    <p class="text-xs text-blue-800">(Password should include letters, numbers, special characters)</p>
    <form action="/api/setPassword" method="POST" class="w-full flex justify-center items-start flex-col ld:mt-4 md:mt-3 mt-2">
      <input type="text" name="firstPassword" class="w-full bg-white text-black md:text-base text-sm md:rounded-md rounded-sm md:p-2 p-1 my-1 border border-gray-400 shadow-md form_input" placeholder="Write new password" />
      <input type="text" name="secondPassword" class="w-full bg-white text-black md:text-base text-sm md:rounded-md rounded-sm md:p-2 p-1 my-1 border border-gray-400 shadow-md form_input" placeholder="Write again" />
      <div class="w-full flex justify-start items-center flex-row"></div>
      <button type="submit" class="md:font-bold font-semibold md:text-base text-sm bg-green-700 text-white rounded-md p-1 px-2 mt-1 md:px-3 outline-none cursor-pointer shadow-md hover:bg-blue-600 btn">Send</button>
    </form>
  </div>
</main>

<!-- Script Tag -->
<script>
  let message_to_user_div = document.querySelector('.message_to_user_div');

  setTimeout(function() {
    message_to_user_div.style.display = 'none';
  }, 3000);
</script>

<%- include('partials/footer') %>