<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>EduWeb | Discover Colleges, Courses and Exams for higher education in India</title>
  <link rel="stylesheet" href="/styles/style.css">
  <style>
    .topHeadPhoto {
      border-radius: 50% 50%;
    }

    .scaleImage {
      transition: transform .5s ease-in;
    }

    .scaleImage:hover {
      transform: scale(0.9);
    }

    .searchBar input {
      width: 72%;
    }

    .searchBar button {
      width: 22%;
    }

    .changeClass {
      background-color: green;
    }

    .infoPage {
      width: 75%;
    }

    .adPage {
      height: 80vh;
    }
  </style>
</head>

<body class="bg-gray-300">
  <header class="w-full flex justify-center items-center relative text-white z-10">

    <!-- Desktop Version -->
    <nav class="w-full hidden lg:flex justify-between items-center px-1 py-1 fixed top-0" style="background-color: #1e40af;">
      <div class="lg:w-36 lg:px-1">
        <a href="/api/home" rel="noopener noreferrer"><img src="/logoPre.png" class="w-full" alt="Logo of Eduweb Online Website"></a>
      </div>
      <ul class="lg:w-3/6 h-full flex justify-evenly items-center flex-row text-sm lg:font-bold">
        <li class="w-auto h-full flex justify-between items-center flex-row select-none cursor-pointer lg:p-1 xl:mr-4 lg:mr-2 lg:rounded-sm text-white hover:bg-white hover:text-blue-800">
          <a href="/api/home" class="w-full flex justify-center items-center no-underline px-4" rel="noopener noreferrer">
            <div class="w-full flex justify-center items-center flex-row">
              <p>Home</p>
            </div>
          </a>
        </li>
        <li class="w-auto h-full flex justify-between items-center flex-row select-none cursor-pointer lg:p-1 xl:mr-4 lg:mr-2 lg:rounded-sm text-white hover:bg-white hover:text-blue-800">
          <a href="/api/profile" class="w-full flex justify-center items-center no-underline px-4" rel="noopener noreferrer">
            <div class="w-full flex justify-center items-center flex-row">
              <p>Profile</p>
            </div>
          </a>
        </li>
        <li class="w-auto h-full flex justify-between items-center flex-row select-none cursor-pointer lg:p-1 xl:mr-4 lg:mr-2 lg:rounded-sm text-white hover:bg-white hover:text-blue-800">
          <a href="/api/blogs" class="w-full flex justify-center items-center no-underline px-4" rel="noopener noreferrer">
            <div class="w-full flex justify-center items-center flex-row">
              <p>Blogs</p>
            </div>
          </a>
        </li>
        <li class="w-auto h-full flex justify-between items-center flex-row select-none cursor-pointer lg:p-1 xl:mr-4 lg:mr-2 lg:rounded-sm text-white hover:bg-white hover:text-blue-800">
          <a href="/api/settings" class="w-full flex justify-center items-center no-underline px-4" rel="noopener noreferrer">
            <div class="w-full flex justify-center items-center flex-row">
              <p>Settings</p>
            </div>
          </a>
        </li>
        <li class="w-auto h-full flex justify-between items-center flex-row select-none cursor-pointer lg:p-1 xl:mr-4 lg:mr-2 lg:rounded-sm text-white hover:bg-white hover:text-blue-800">
          <a href="/api/logout" class="w-full flex justify-center items-center no-underline px-4" rel="noopener noreferrer">
            <div class="w-full flex justify-center items-center flex-row">
              <p>Logout</p>
            </div>
          </a>
        </li>
      </ul>

      <div class="lg:w-3/12 w-full flex justify-end items-center text-white select-none">
        <div class="w-auto flex justify-center items-center flex-row text-sm lg:font-bold px-2">
          <p class="w-auto">@<%= user.username ? (user.username.length > 7 ? user.username.slice(0, 7) + '...' : user.username.slice(0)) : '' %></p>
        </div>
        <div class="w-20 flex justify-around items-center">
          <img src="<%= user.profile_image %>" class="w-10 object-fill aspect-square topHeadPhoto" alt="User Profile Image on Eduweb Online Website">
        </div>
      </div>
    </nav>

    <!-- Mobile Version -->
    <nav class="w-full lg:hidden flex justify-between items-center px-1 py-1 fixed top-0 z-10" style="background-color: #1e40af;">
      <div class="w-1/2 flex justify-start items-center flex-row">
        <div class="w-20 md:w-1/3 rounded-sm">
          <a href="/api/home" class="cursor-pointer" rel="noopener noreferrer">
            <img src="/logoPre.png" class="w-32" alt="Logo of Eduweb Online Website">
          </a>
        </div>
      </div>
      <div class="w-full flex justify-end items-center cursor-pointer" onclick="myFunctionMobileScreen()">
        <div class="w-auto flex justify-center items-center flex-row md:text-sm text-xs md:font-semibold sm:font-medium font-normal px-2">
          <p class="w-auto">@<%= user.username ? (user.username.length > 7 ? user.username.slice(0, 7) + '...' : user.username.slice(0)) : '' %></p>
        </div>
        <img src="<%= user.profile_image %>" class="md:w-10 w-8 object-fll aspect-square topHeadPhoto" alt="User Profile Image on Eduweb Online Website">
        <img src="/sortDown.png" class="md:w-3 w-2 md:mx-2 mx-1" alt="Eduweb Online Website">
      </div>
      <div class="w-auto dropDownDivMobileScreen hidden justify-start items-center flex-col text-sm text-black absolute md:top-8 top-6 right-0 bg-white border border-white mt-2 rounded-sm z-1 overflow-auto">
        <a href="/api/home" class="w-full flex justify-start items-center no-underline hover:bg-blue-300 md:p-2 p-1 md:px-4 px-2" rel="noopener noreferrer">
          <div class="w-full flex justify-start items-center flex-row">
            <img src="/home.png" class="md:w-5 w-3" alt="Home Icon on Eduweb Online Website">
            <p class="md:text-sm text-xs">Home</p>
          </div>
        </a>
        <a href="/profile" class="w-full flex justify-start items-center no-underline hover:bg-blue-300 md:p-2 p-1 md:px-4 px-2" rel="noopener noreferrer">
          <div class="w-full flex justify-start items-center flex-row">
            <img src="./personProfile.png" class="md:w-5 w-3" alt="Person Icon on Eduweb Online Website">
            <p class="md:text-sm text-xs">Profile</p>
          </div>
        </a>
        <a href="/blogs" class="w-full flex justify-start items-center no-underline hover:bg-blue-300 md:p-2 p-1 md:px-4 px-2" rel="noopener noreferrer">
          <div class="w-full flex justify-start items-center flex-row">
            <img src="./blog.png" class="md:w-5 w-3" alt="Blog Icon on Eduweb Online Website">
            <p class="md:text-sm text-xs">Blogs</p>
          </div>
        </a>
        <a href="/settings" class="w-full flex justify-start items-center no-underline hover:bg-blue-300 md:p-2 p-1 md:px-4 px-2" rel="noopener noreferrer">
          <div class="w-full flex justify-start items-center flex-row">
            <img src="./settings.png" class="md:w-5 w-3" alt="Settings Icon on Eduweb Online Website">
            <p class="md:text-sm text-xs">Settings</p>
          </div>
        </a>
        <a href="/logout" class="w-full flex justify-start items-center no-underline hover:bg-blue-300 md:p-2 p-1 md:px-4 px-2" rel="noopener noreferrer">
          <div class="w-full flex justify-start items-center flex-row">
            <img src="./logout.png" class="md:w-5 w-3" alt="Logout Icon on Eduweb Online Website">
            <p class="md:text-sm text-xs">Logout</p>
          </div>
        </a>
      </div>
    </nav>
  </header>

  <body>

    <script>
      function myFunctionMobileScreen() {
        if (document.querySelector('.dropDownDivMobileScreen').style.display === 'flex') {
          document.querySelector('.dropDownDivMobileScreen').style.display = 'none';
        } else {
          document.querySelector('.dropDownDivMobileScreen').style.display = 'flex';
        }
      }
    </script>