<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      EduWeb | Discover Colleges, Courses and Exams for higher education in
      India
    </title>
    <link rel="stylesheet" href="/styles/style.css" />
    <style>
      .mainDiv {
        background-image: url("/children.jpg");
        height: 93.5dvh;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
        background-blend-mode: color;
      }

      .menuAndPersonDiv {
        cursor: pointer;
        transition: all 0.3s ease-in-out;
      }

      .menuAndPersonDiv:hover {
        scale: 0.9;
      }
      .instructionDiv {
        font-size: 0.6rem;
      }

      .adPage {
        height: 80vh;
      }
    </style>
  </head>

  <body>
    <main class="w-full flex justify-center items-center bg-blue-800">
      <!-- Desktop Version -->
      <header
        class="w-full hidden lg:flex justify-center items-center bg-blue-800 text-white px-4 py-1"
      >
        <nav class="w-full flex justify-center items-center">
          <div class="w-1/2 relative flex justify-start items-center mx-auto">
            <a href="/api/registerForMember" class="w-28 block cursor-pointer" rel="noopener noreferrer"><img src="/logoPre.png" class="w-full h-auto object-cover" alt="eduweb-online-website"></a>
          </div>
          <div class="w-1/2 flex justify-evenly items-center">
            <a
              href="/api/registerForMember"
              class="font-semibold text-base mr-20 lg:p-1 lg:rounded-sm text-white hover:bg-blue-600"
              rel="noopener noreferrer"
              >Register</a
            >
            <a
              href="/api/loginForMember"
              class="font-semibold text-base lg:p-1 lg:rounded-sm text-whit text-white hover:bg-blue-600"
              rel="noopener noreferrer"
              >Login</a
            >
          </div>
        </nav>
      </header>

      <!-- Mobile Version -->
      <header
        class="w-full h-full flex lg:hidden justify-between items-center flex-row bg-blue-800 text-white p-1 md:px-2 mr-1 md:mr-4"
      >
      <div class="w-1/2 relative flex justify-start items-center mx-auto">
        <div class="w-24 md:w-1/3 block">
          <a href="/api/registerForMember" class="w-16 cursor-pointer" rel="noopener noreferrer"><img src="/logoPre.png" class="w-full h-auto object-cover" alt="eduweb-online-website"></a>
        </div>
      </div>
        <div
          class="w-1/2 flex justify-end items-center flex-row menuAndPersonDiv"
          onclick="showMenu()"
        >
          <div class="w-6 md:w-8">
            <img
              src="/person.png"
              class="w-full object-cover aspect-square"
              alt=""
            />
          </div>
          <div class="w-3">
            <img
              src="/downArrow.png"
              class="w-full object-cover aspect-square"
              alt=""
            />
          </div>
        </div>
        <div
          class="w-auto h-auto hidden justify-center items-start flex-col absolute md:top-11 top-9 right-0 bg-white p-2 text-xs text-black z-10 dropDownDiv"
        >
          <a
            href="/api/registerForMember"
            class="w-full font-semibold md:text-sm text-xs hover:bg-gray-200 p-1"
            rel="noopener noreferrer"
            >Register</a
          >
          <a
            href="/api/loginForMember"
            class="w-full font-semibold md:text-sm text-xs hover:bg-gray-200 p-1"
            rel="noopener noreferrer"
            >Login</a
          >
        </div>
      </header>

      <script>
        function showMenu() {
          if (document.querySelector(".dropDownDiv").style.display === "flex") {
            document.querySelector(".dropDownDiv").style.display = "none";
          } else {
            document.querySelector(".dropDownDiv").style.display = "flex";
          }
        }
      </script>
    </main>
  </body>
</html>
