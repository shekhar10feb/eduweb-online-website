<!-- ============== -->
<!--   Login For College Page -->
<!-- ============== -->

<%- include ('partials/headerForLoginAndRegisterForCollege') %>
  <main
    class="max-w-full md:h-auto h-full flex justify-center items-center flex-col rounded-md text-black lg:p-28 md:p-20 p-3 shadow-lg mainDiv z-0">
    <% if(typeof message !=='undefined' ) { %>
      <div
        class="lg:w-56 md:w-44 w-72 flex justify-center items-start absolute xl:right-36 md:right-8 md:top-auto top-2 my-1 bg-white lg:rounded-md rounded lg:p-5 md:p-2 p-1 md:border-2 border border-green-600 shadow-md">
        <h1 class="w-full text-green-600 lg:text-base md:text-sm text-xs lg:font-semibold font-medium">
          <%= message %>
        </h1>
      </div>
      <% } %>
        <div
          class="lg:w-96 md:w-80 w-72 h-auto flex justify-center items-center flex-col bg-white lg:p-7 md:p-5 p-2 md:rounded-md rounded-sm">
          <div class="w-full flex justify-start items-center">
            <img src="/logo.png" class="lg:w-36 md:w-28 w-24 rounded-md">
          </div>
          <div class="w-full text-center my-1">
            <h1 class="lg:font-extrabold md:font-bold font-semibold lg:text-xl md:text-lg text-black">
              <i>Let's Login!</i>
            </h1>
          </div>
          <form action='/api/loginForCollege' method="POST"
            class="md:w-80 w-full flex justify-center items-center flex-col lg:my-1 md:my-0.5">
            <div class="w-full flex justify-center items-center flex-col lg:my-1 my-0.5 mt-2">
              <div class="w-full flex justify-start items-center flex-col lg:my-1">
                <label for="name" class="lg:w-11/12 md:w-10/12 w-9/12 text-xs">Username:</label>
                <input type="text" name="username" placeholder="Enter College username..."
                  class="lg:w-11/12 md:w-10/12 w-9/12 flex justify-center items-center lg:py-1 pl-1 lg:my-1 border border-gray-500 focus:outline-blue-500 hover:bg-blue-200 rounded-sm"
                  required />
              </div>
              <div class="w-full flex justify-start items-center flex-col lg:my-1 my-1 signuppage_password">
                <label for="name" class="lg:w-11/12 md:w-10/12 w-9/12 text-xs">Password:</label>
                <input type="password" name="password" placeholder="Enter College password"
                  class="lg:w-11/12 md:w-10/12 w-9/12 flex justify-center items-center lg:pl-2 pl-1 lg:py-1 lg:my-0.5 border border-gray-500 focus:outline-blue-500 hover:bg-blue-200 rounded-sm"
                  required />
              </div>
              <div
                class="lg:w-11/12 md:w-10/12 w-9/12 lg:text-base md:text-sm text-xs flex justify-start items-center lg:my-0.5 md:my-0.5 my-1">
                <a href="/api/forgotPasswordForCollege" target="_blank" rel="noopener noreferrer"
                  class="w-full text-start font-bold text-purple-600 hover:text-purple-500">
                  Forgot Password?
                </a>
              </div>
              <div class="w-full flex justify-center items-center lg:font-semibold lg:my-2 md:my-1">
                <a href="" class="lg:w-11/12 md:w-10/12 w-9/12" target="_blank" rel="noopener noreferrer">
                  <button type="submit"
                    class="md:w-full w-auto bg-blue-800 lg:font-extrabold md:font-bold font-semibold lg:text-base md:text-sm text-xs text-white hover:bg-blue-700 lg:p-1 p-1 px-2 rounded-sm outline-none">
                    Login
                  </button>
                </a>
              </div>
            </div>
          </form>
          <div
            class="md:w-80 w-full flex justify-center items-center flex-col md:my-0.5 font-semibold lg:text-base md:text-sm text-xs text-gray-500 lg:my-1 lg:mb-2 my-0.5">
            <p class="lg:w-11/12 md:w-10/12 w-9/12">
              Don't have an account?
              <a href="/api/registerForCollege" rel="noopener noreferrer"
                class="font-bold underline text-red-400 hover:text-red-500 cursor-pointer">
                Signup
              </a>
            </p>
          </div>
        </div>
        </div>
  </main>
  <%- include('partials/footer') %>